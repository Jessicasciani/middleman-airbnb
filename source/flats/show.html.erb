<% flat = data.flats[owner] %>

<div id='show'>
  <div class="header" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>'); height: 50vh; background-position: center; background-image: cover;">
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">

      <div class="owner-card">

        <div class="owner-img">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle avatar" %>
        <p class="text-center"> <%= owner %> </p>
        </div>

        <div class="owner-description">
          <h1><%= flat.description %></h1>
          <p><%= flat.city_name %></p>
          <% flat.rating.times do %>
            <i class="fa fa-star"></i>
            <% end %>
        </div>

      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="form-booking">
        <form action="#">
          <h4>Book this flat</h4>
          <div class='form-group'>
            <div class='row'>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout" id="checkout">
              </div>
            </div>
            <div class="form-group">
              <select name id="guests" class="form-control">
                <option value="1"> 1 guest</option>
                <option value="2"> 2 guests</option>
                <option value="3"> 3 guests</option>
                <option value="4"> 4 guests</option>
              </select>
              <input type="submit" class="btn btn-danger" value="Book it!" style="width: 100%">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
